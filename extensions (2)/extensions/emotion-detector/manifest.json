{
  "manifest_version": 3,
  "name": "EmoVision - Instant Emotion & Body Language",
  "version": "4.0.0",
  "description": "Instant emotion and body language detection at 30 FPS - perfect video sync",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "tabCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "EmoVision - Instant Detection"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/tf-core.min.js",
        "libs/tf-converter.min.js",
        "libs/tf-backend-webgl.min.js",
        "libs/face-api.min.js",
        "libs/pose-detection.min.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "models/*",
        "libs/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
